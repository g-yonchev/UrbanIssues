<Page
    x:Class="Urban_Issues_Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Urban_Issues_Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="ApplicationTitle" Style="{StaticResource CenteredTextBlockStyle}" TextWrapping="Wrap" Text="URBAN ISSUES" Margin="10,200,10,0" SelectionHighlightColor="#FF5159FF"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Content="Login" FontSize="30" Grid.Column="0" HorizontalAlignment="Center" Margin="10,294" Width="160" Background="#33D8D8D8" FontFamily="Yu Gothic" Click="LoginButtonClick"/>
            <Button Content="Register" FontSize="30" Grid.Column="1" HorizontalAlignment="Center" Click="RegisterButtonClick" Margin="10,294" Width="160" FontFamily="Yu Gothic" Background="#33D8D8D8"></Button>
        </Grid>

    </Grid>
</Page>
